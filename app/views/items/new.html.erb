<% provide(:title, '項目登録') %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@item) do |f| %>
      <%= f.label :deck, "デッキ", class: "input-label" %>
      <%= f.select :deck_id, options_for_select(decks_options_for_select_tag, selected: @item.deck_id),
          {include_blank: true}, {class: "form-control"} %>

      <%= f.label :front_text, "表", class: "input-label" %>
      <%= f.text_area :front_text, class: 'form-control', rows: 5 %>
      <%= f.file_field :front_picture, accept: 'image/jpeg,image/gif,image/png' %>

      <%= f.label :back_text, "裏", class: "input-label" %>
      <%= f.text_area :back_text, class: 'form-control', rows: 5 %>
      <%= f.file_field :back_picture, accept: 'image/jpeg,image/gif,image/png' %>

      <%= f.submit "登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
    $('#item_front_picture').bind('change', function() {
        var size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('5MB以下のファイルを選択してください。');
        }
    });
    $('#item_back_picture').bind('change', function() {
        var size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('5MB以下のファイルを選択してください。');
        }
    });
</script>