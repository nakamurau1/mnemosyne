<div class="row">
  <div class="col-10 mx-auto item" id ="item-<%= item.id %>">
    <span class="front-text"><%= item.front_text %></span>
    <i class="fas angle collapsed" data-toggle="collapse" data-target="#collapse-item-<%= item.id %>"></i>
    <div class="collapse" id="collapse-item-<%= item.id %>">
      <span class="back-text">
        <%= item.back_text %>
      </span>
      <div class="review-btn">
        <%= button_to "もう一度", items_review_path(quality: :again, item_id: item.id), class: "btn btn-danger again" %>
        <%= button_to "普通", items_review_path(quality: :good, item_id: item.id), class: "btn btn-primary good" %>
        <%= button_to "簡単", items_review_path(quality: :easy, item_id: item.id), class: "btn btn-success easy" %>
      </div>
    </div>
    <%= link_to "編集", edit_item_path(item), class: "far fa-edit" %>
    <span class="timestamp">
      <%= item.created_at.strftime("%Y/%m/%d") %>
    </span>
  </div>
</div>
