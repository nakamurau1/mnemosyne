<% provide(:title, '項目編集') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@item) do |f| %>
      <%= f.label :front_text, "表" %>
      <%= f.text_area :front_text, class: 'form-control', rows: 5 %>

      <%= f.label :back_text, "裏" %>
      <%= f.text_area :back_text, class: 'form-control', rows: 5 %>

      <%= f.submit "更新する", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "削除する", item_path(@item), method: :delete, class: "item-delete-link" %>
  </div>
</div>