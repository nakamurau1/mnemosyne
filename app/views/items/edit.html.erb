<% provide(:title, '項目編集') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@item) do |f| %>
      <%= f.label :front_text, "表" %>
      <%= f.text_field :front_text, class: 'form-control' %>

      <%= f.label :back_text, "裏" %>
      <%= f.text_field :back_text, class: 'form-control' %>

      <%= f.submit "更新する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>